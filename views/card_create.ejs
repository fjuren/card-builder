<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <title></title>
    <meta name="description" content="" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="" />
  </head>
  <body>
    <a href="/community-creations"> < back </a>
    <h1><%= title %></h1>
    <form action="" method="post">
      <div class="name">
        <label for="name">Name:</label>
        <input type="text" id="name" name="name" />
      </div>
      <div class="hp">
        <label for="hp">HP:</label>
        <input type="number" id="hp" name="hp" />
      </div>
      <div class="type">
        <label for="type">Type: </label>
        <select name="type" id="type" name="type">
          <% types.forEach((t) => { %>
          <option value="<%= t.type %>"><%= t.type %></option>
          <% }) %>
        </select>
      </div>
      <div class="description">
        <label for="description">Description:</label>
        <input type="text" id="description" name="description" />
      </div>
      <div class="attack_1">
        <label for="attack_1">Attack:</label>
        <input type="text" id="attack_1" name="attack_1" />
      </div>
      <div class="attack_1_description">
        <label for="attack_1_description">Attack description:</label>
        <input
          type="text"
          id="attack_1_description"
          name="attack_1_description"
        />
      </div>
      <div class="damage_1">
        <label for="damage_1">Damage:</label>
        <input type="number" id="damage_1" name="damage_1" />
      </div>
      <div class="cost_1">
        <label for="cost_1">Cost</label>
        <% types.forEach((t) => { %>
        <input type="checkbox" id="cost_1" name="cost_1" />
        <label for="cost_1"><%= t.type %></label>
        <% }) %>
      </div>
      <div class="attack_2">
        <label for="attack_2">Attack:</label>
        <input type="text" id="attack_2" name="attack_2" />
      </div>
      <div class="attack_2_description">
        <label for="attack_2_description">Attack description:</label>
        <input
          type="text"
          id="attack_2_description"
          name="attack_2_description"
        />
      </div>
      <div class="damage_2">
        <label for="damage_2">Damage:</label>
        <input type="number" id="damage_2" name="damage_2" />
      </div>
      <div class="cost_2">
        <label for="cost_2">Cost</label>
        <% types.forEach((t) => { %>
        <input type="checkbox" id="cost_2" name="cost_2" />
        <label for="cost_2"><%= t.type %></label>
        <% }) %>
      </div>
      <div class="weakness">
        <label for="weakness">Weakness:</label>
        <% types.forEach((t) => { %>
        <input type="checkbox" id="weakness" name="weakness" />
        <label for="weakness"><%= t.type %></label>
        <% }) %>
      </div>
      <div class="resistance">
        <label for="resistance">Resistance:</label>
        <% types.forEach((t) => { %>
        <input type="checkbox" id="resistance" name="resistance" />
        <label for="resistance"><%= t.type %></label>
        <% }) %>
      </div>
      <div class="retreat_cost">
        <label for="retreat_cost">retreat cost:</label>
        <% types.forEach((t) => { %>
        <input type="checkbox" id="retreat_cost" name="retreat_cost" />
        <label for="retreat_cost"><%= t.type %></label>
        <% }) %>
      </div>
      <input type="submit" value="Submit" />
    </form>
  </body>
</html>
