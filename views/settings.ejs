<%- include("partials/header", {user: user}) -%>

<body>
  <a href="/cards"> < back </a>
  <h1><%= title %></h1>
  <h2>Profile information:</h2>
  <h4>Username:</h4>
  <p><%= user.username %></p>
  <h4>First name:</h4>
  <p><%= user.firstname %></p>
  <h4>Membership status:</h4>
  <p><%= user.membershipstatus %></p>
  <h4>Admin status:</h4>
  <p><%= user.isAdmin %></p>
  <form action="" method="post">
    <div>
      <label for="membership">Enter the secret code to become a member:</label>
      <input name="membership" type="password" id="membership" value="<%= membershipfield === null ? '' : membershipfield %>" />
    </div>
    <div>
      <label for="admin">Enter the secret code to become to hold a site admin role:</label>
      <input name="admin" type="password" id="admin" value="<%= adminfield === null ? '' : adminfield %>" />
    </div>
    <div>
      <button>Submit</button>
    </div>
</body>
